---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import CTASection from '../components/CTASection.astro';
import FAQ from '../components/FAQ.astro';
import { getImage } from 'astro:assets';
import heroImage from '../assets/salaryReport.png';

// Get optimized hero image for preloading
const optimizedHero = await getImage({ src: heroImage, width: 700 });
---

<Layout
  title="Bokföring och lönehantering för taxiåkerier | Taxi Administration"
  description="Automatisera löneberäkningar för ditt taxiåkeri. Stöd för Uber, Bolt, Taxi Stockholm. Börja gratis."
  preloadImage={optimizedHero.src}
>
  <Hero />
  <Features />
  <FAQ />
  <CTASection />
</Layout>
