---
import Layout from '../../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { contact } from '../../i18n/translations/so';
---

<Layout
  title={contact.seo.title}
  description={contact.seo.description}
>
  <section class="pt-20 pb-16 md:pt-28 md:pb-24">
    <div class="container-custom">
      <Breadcrumb items={contact.header.breadcrumbs} />
      <div class="text-center max-w-3xl mx-auto animate-on-scroll">
        <h1 class="text-4xl md:text-5xl font-bold leading-tight">
          <span class="gradient-text">{contact.header.title}</span>
        </h1>
        <p class="mt-6 text-xl text-gray-600">
          {contact.header.subtitle}
        </p>
      </div>
    </div>
  </section>

  <section class="py-16 bg-gray-50">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <!-- Contact Info -->
        <div class="lg:col-span-1">
          <div class="bg-white rounded-xl p-8 shadow-sm border border-gray-100 animate-on-scroll">
            <h2 class="text-2xl font-bold mb-6">{contact.contactInfo.title}</h2>

            <div class="space-y-6">
              <div class="flex items-start">
                <div class="flex-shrink-0 h-10 w-10 rounded-lg bg-blue-100 flex items-center justify-center text-blue-600">
                  <Icon name={contact.contactInfo.company.icon} class="h-5 w-5" />
                </div>
                <div class="ml-4">
                  <p class="font-semibold text-gray-900">{contact.contactInfo.company.label}</p>
                  <p class="text-gray-600">{contact.contactInfo.company.value}</p>
                </div>
              </div>

              <div class="flex items-start">
                <div class="flex-shrink-0 h-10 w-10 rounded-lg bg-blue-100 flex items-center justify-center text-blue-600">
                  <Icon name={contact.contactInfo.location.icon} class="h-5 w-5" />
                </div>
                <div class="ml-4">
                  <p class="font-semibold text-gray-900">{contact.contactInfo.location.label}</p>
                  <p class="text-gray-600">{contact.contactInfo.location.value}</p>
                </div>
              </div>

              <div class="flex items-start">
                <div class="flex-shrink-0 h-10 w-10 rounded-lg bg-blue-100 flex items-center justify-center text-blue-600">
                  <Icon name={contact.contactInfo.responseTime.icon} class="h-5 w-5" />
                </div>
                <div class="ml-4">
                  <p class="font-semibold text-gray-900">{contact.contactInfo.responseTime.label}</p>
                  <p class="text-gray-600">{contact.contactInfo.responseTime.value}</p>
                </div>
              </div>
            </div>

            <div class="mt-8 pt-6 border-t border-gray-100">
              <a
                href={contact.contactInfo.linkedInUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center text-blue-600 hover:underline"
              >
                <Icon name={contact.contactInfo.linkedInIcon} class="h-5 w-5 mr-2" />
                {contact.contactInfo.linkedInText}
              </a>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden animate-on-scroll delay-1">
            <div class="p-8 md:p-12">
              <h2 class="text-2xl font-bold mb-6">{contact.form.title}</h2>
              <form
                action={contact.form.action}
                method="POST"
                class="space-y-6"
              >
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div>
                    <label for="name" class="block text-gray-700 font-medium mb-2">{contact.form.fields.name.label}</label>
                    <input
                      type={contact.form.fields.name.type}
                      id="name"
                      name="name"
                      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-blue-600 transition-colors"
                      required={contact.form.fields.name.required}
                    />
                  </div>
                  <div>
                    <label for="email" class="block text-gray-700 font-medium mb-2">{contact.form.fields.email.label}</label>
                    <input
                      type={contact.form.fields.email.type}
                      id="email"
                      name="email"
                      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-blue-600 transition-colors"
                      required={contact.form.fields.email.required}
                    />
                  </div>
                </div>

                <div>
                  <label for="company" class="block text-gray-700 font-medium mb-2">{contact.form.fields.company.label}</label>
                  <input
                    type={contact.form.fields.company.type}
                    id="company"
                    name="company"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-blue-600 transition-colors"
                  />
                </div>

                <div>
                  <label for="subject" class="block text-gray-700 font-medium mb-2">{contact.form.fields.subject.label}</label>
                  <select
                    id="subject"
                    name="subject"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-blue-600 transition-colors"
                    required={contact.form.fields.subject.required}
                  >
                    {contact.form.fields.subject.options.map(option => (
                      <option value={option.value} disabled={option.disabled}>{option.label}</option>
                    ))}
                  </select>
                </div>

                <div>
                  <label for="message" class="block text-gray-700 font-medium mb-2">{contact.form.fields.message.label}</label>
                  <textarea
                    id="message"
                    name="message"
                    rows={contact.form.fields.message.rows}
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-blue-600 transition-colors"
                    required={contact.form.fields.message.required}
                  ></textarea>
                </div>

                <div>
                  <button
                    type="submit"
                    class="btn btn-primary w-full md:w-auto"
                  >
                    {contact.form.submitButton}
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ teaser -->
  <section class="py-16">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto animate-on-scroll">
        <h2 class="text-2xl font-bold mb-4">{contact.faqTeaser.title}</h2>
        <p class="text-gray-600 mb-6">
          {contact.faqTeaser.subtitle}
        </p>
        <a href={contact.faqTeaser.buttonLink} class="btn btn-secondary">
          {contact.faqTeaser.buttonText}
        </a>
      </div>
    </div>
  </section>
</Layout>
