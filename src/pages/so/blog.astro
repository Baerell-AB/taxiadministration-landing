---
import Layout from '../../layouts/Layout.astro';
import CTASection from '../../components/CTASection.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { getCollection } from 'astro:content';
import { blog } from '../../i18n/translations/so';

const allBlogPosts = await getCollection('blog', ({ data }) => {
  return data.locale === 'so';
});
// Sort by date (newest first)
const sortedPosts = allBlogPosts.sort((a, b) => {
  return new Date(b.data.date).getTime() - new Date(a.data.date).getTime();
});
---

<Layout
  title={blog.seo.title}
  description={blog.seo.description}
>
  <section class="pt-20 pb-16 md:pt-28 md:pb-24">
    <div class="container-custom">
      <Breadcrumb items={blog.breadcrumb} />
      <div class="text-center max-w-3xl mx-auto animate-on-scroll">
        <h1 class="text-4xl md:text-5xl font-bold leading-tight">
          {blog.hero.title.start} <span class="gradient-text">{blog.hero.title.highlight}</span>
        </h1>
        <p class="mt-6 text-xl text-gray-600">
          {blog.hero.subtitle}
        </p>
      </div>
    </div>
  </section>

  <!-- Blog Posts Grid -->
  <section class="py-16">
    <div class="container-custom">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {sortedPosts.map((post, index) => (
          <article
            class="blog-post bg-white rounded-xl shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden animate-on-scroll border border-gray-100 group hidden"
            style={`animation-delay: ${index * 0.1}s`}
            data-date={post.data.date}
          >
            <a href={`/so/blog/${post.id}`} class="block">
              {post.data.image && (
                <div class="aspect-video bg-gradient-to-br from-blue-100 to-purple-100 overflow-hidden">
                  <img
                    src={post.data.image}
                    alt={post.data.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                  />
                </div>
              )}
              <div class="p-6">
                <div class="flex items-center gap-2 mb-3">
                  {post.data.tags && post.data.tags.map((tag) => (
                    <span class="text-xs px-3 py-1 bg-blue-100 text-blue-700 rounded-full font-medium">
                      {tag}
                    </span>
                  ))}
                </div>
                <h2 class="text-xl font-bold mb-3 group-hover:text-blue-600 transition-colors">
                  {post.data.title}
                </h2>
                <p class="text-gray-600 mb-4 line-clamp-3">
                  {post.data.excerpt}
                </p>
                <div class="flex items-center gap-3 pt-4 border-t border-gray-100">
                  {post.data.authorAvatar && (
                    <img
                      src={post.data.authorAvatar}
                      alt={post.data.author}
                      class="w-10 h-10 rounded-full"
                      loading="lazy"
                    />
                  )}
                  <div class="flex-1">
                    <p class="font-medium text-sm">{post.data.author}</p>
                    <p class="text-xs text-gray-500">{post.data.date}</p>
                  </div>
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>

      {sortedPosts.length === 0 && (
        <div class="text-center py-16">
          <p class="text-xl text-gray-600">{blog.emptyState.message}</p>
        </div>
      )}
    </div>
  </section>

  <CTASection />
</Layout>

<script>
  const now = new Date();
  const today = new Date(now.getFullYear(), now.getMonth(), now.getDate());

  document.querySelectorAll('.blog-post').forEach(post => {
    const postDate = new Date(post.getAttribute('data-date') + 'T00:00:00');
    if (postDate <= today) {
      post.classList.remove('hidden');
    }
  });
</script>
