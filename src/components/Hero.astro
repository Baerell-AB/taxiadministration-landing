---
import { Image } from 'astro:assets';
import heroImage from '../assets/salaryReport.png';
import { getLangFromUrl } from '../i18n/utils';
import * as svTranslations from '../i18n/translations/sv';
import * as enTranslations from '../i18n/translations/en';

const lang = getLangFromUrl(Astro.url);
const translations = lang === 'sv' ? svTranslations : enTranslations;
const home = translations.home;
---

<section class="pt-20 pb-16 md:pt-28 md:pb-24 overflow-hidden relative">
  <!-- Subtle background pattern with parallax effect -->
  <div class="absolute inset-0 opacity-5 parallax" data-speed="0.2">
    <div class="absolute inset-0 bg-repeat" style="background-image: url('/grid-pattern.svg');"></div>
  </div>

  <div class="container-custom relative">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div>
        <h1 class="animate-on-scroll delay-0 text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
          {home.hero.title.start} <span class="gradient-text">{home.hero.title.highlight}</span> {home.hero.title.end}
        </h1>
        <p class="animate-on-scroll delay-1 mt-6 text-xl text-gray-600 max-w-lg">
          {home.hero.subtitle}
        </p>
        <div class="animate-on-scroll delay-2 mt-8 flex flex-col sm:flex-row gap-4">
          <a href={home.hero.buttons.primary.href} class="btn btn-primary">{home.hero.buttons.primary.text}</a>
          <a href={home.hero.buttons.secondary.href} class="btn btn-secondary">{home.hero.buttons.secondary.text}</a>
        </div>
        <div class="animate-on-scroll delay-3 mt-8 flex flex-wrap items-center gap-6 text-sm text-gray-500">
          {home.hero.benefits.map((benefit) => (
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>{benefit}</span>
            </div>
          ))}
        </div>
      </div>

      <div class="animate-on-scroll delay-4">
        <div class="relative hover-zoom">
          <div class="absolute -inset-0.5 bg-gradient-to-r from-blue-600 to-blue-400 rounded-xl blur opacity-30 transition-opacity duration-300 hover:opacity-50"></div>
          <div class="relative bg-white rounded-xl shadow-xl overflow-hidden">
            <Image
              src={heroImage}
              alt="Löneberäkning och rapporter för taxiåkerier"
              class="w-full h-auto transition-all duration-500"
              width={700}
              height={500}
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
