---
import { common } from '../content/texts';
---

<section class="py-20 bg-gradient-to-r from-blue-600 to-blue-500 text-white relative overflow-hidden">
  <!-- Animated background elements -->
  <div class="absolute inset-0 overflow-hidden opacity-10">
    <div class="absolute -top-40 -left-40 w-80 h-80 bg-white rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute top-40 -right-20 w-60 h-60 bg-white rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute -bottom-40 left-1/3 w-80 h-80 bg-white rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
  </div>

  <div class="container-custom relative">
    <div class="max-w-3xl mx-auto text-center animate-on-scroll">
      <h2 class="text-3xl md:text-4xl font-bold">
        {common.cta.title}
      </h2>
      <p class="mt-6 text-xl opacity-90">
        {common.cta.subtitle}
      </p>
      <div class="mt-8 flex flex-wrap justify-center gap-6 text-sm opacity-80">
        {common.cta.benefits.map((benefit) => (
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>{benefit}</span>
          </div>
        ))}
      </div>
      <div class="mt-10 flex flex-col sm:flex-row justify-center gap-4">
        <a href={common.cta.buttons.primary.href} class="btn bg-white text-blue-600 hover:bg-opacity-90 transform transition-all duration-300 hover:scale-105 hover:shadow-lg font-semibold">
          {common.cta.buttons.primary.text}
        </a>
        <a href={common.cta.buttons.secondary.href} class="btn border border-white hover:bg-white/20 transform transition-all duration-300 hover:scale-105">
          {common.cta.buttons.secondary.text}
        </a>
      </div>
    </div>
  </div>
</section>
